{
  "project": {
    "testing": {
      "policy": "selective",
      "commandTests": false,
      "description": "CLI commands do NOT require test coverage - focus on core logic in lib/ files",
      "exclusions": [
        "src/commands/*"
      ]
    }
  },
  "permissions": {
    "allow": [
      "Read(test/lib/**)",
      "Write(test/lib/**)"
    ],
    "deny": [
      "Write(test/commands/**)"
    ]
  }
}