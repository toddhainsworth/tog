{
  "name": "tog",
  "description": "Toggl CLI - Simplified Architecture",
  "version": "0.6.0",
  "author": "Todd Hainsworth",
  "bin": {
    "tog": "./bin/run.js"
  },
  "bugs": "https://github.com/toddhainsworth/tog/issues",
  "dependencies": {
    "@inquirer/prompts": "^7.8.6",
    "arktype": "^2.1.22",
    "axios": "^1.12.2",
    "commander": "^12.1.0",
    "dayjs": "^1.11.18"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.9",
    "@types/node": "^18.19.127",
    "chai": "^4.5.0",
    "mocha": "^11.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist"
  ],
  "homepage": "https://github.com/toddhainsworth/tog",
  "keywords": [
    "toggl",
    "cli",
    "time-tracking"
  ],
  "license": "MIT",
  "main": "dist/cli.js",
  "type": "module",
  "repository": "toddhainsworth/tog",
  "scripts": {
    "build": "tsc",
    "test": "mocha --require ./test/mocha.env.js test/**/*.test.ts",
    "test:watch": "yarn test -- --watch",
    "test:update": "UPDATE_GOLDEN=true yarn test",
    "lint": "echo 'ESLint configuration pending - currently skipped'",
    "lint:fix": "echo 'ESLint configuration pending - currently skipped'",
    "start": "node dist/cli.js",
    "dev": "ts-node --loader ts-node/esm src/cli.ts",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "pretest": "yarn build",
    "verify": "yarn lint && yarn test && yarn build"
  },
  "packageManager": "yarn@1.22.22"
}
